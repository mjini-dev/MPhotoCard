<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Sample">


    <TextView
        android:id="@+id/txt_making"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="#CFB6F1"
        android:layout_marginTop="8dp"
        android:text="템플릿"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/temp_1"
        android:layout_width="130dp"
        android:layout_height="90dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toStartOf="@+id/temp_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_making"
        app:srcCompat="@drawable/sample" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="오늘하루도 행복하세요."
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/temp_1"
        app:layout_constraintEnd_toEndOf="@+id/temp_1"
        app:layout_constraintStart_toStartOf="@+id/temp_1"
        app:layout_constraintTop_toTopOf="@+id/temp_1" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="200dp">

        <Button
            android:id="@+id/btn_go_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="나의 카드 목록" />
    </LinearLayout>

    <ImageView
        android:id="@+id/temp_2"
        android:layout_width="130dp"
        android:layout_height="90dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/temp_1"
        app:layout_constraintTop_toBottomOf="@+id/txt_making"
        app:srcCompat="@drawable/dog" />

    <TextView
        android:id="@+id/tv_temp2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아르릉"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/temp_2"
        app:layout_constraintEnd_toEndOf="@+id/temp_2"
        app:layout_constraintStart_toStartOf="@+id/temp_2"
        app:layout_constraintTop_toTopOf="@+id/temp_2" />


</androidx.constraintlayout.widget.ConstraintLayout>